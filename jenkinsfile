pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/bin/node"
       SSH_KEY_PATH = 'C:\\Users\\Sambit\\Downloads\\second-jenkin.pem'
    }

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "npm install sonar-scanner"
                    sh "npm run sonar-scanner"
                }
            }
        }
  stage('deploy'){
     steps{
         sh "scp -i ${SSH_KEY_PATH} C:\\Users\\Sambit\\Downloads\\api-test-master\\api-test-master\\index.js ec2-user@3.81.114.150:/home/ubuntu"
       }
     }

    }
}
