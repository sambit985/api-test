pipeline {
    agent any

 

    environment {
        PATH = "$PATH:/usr/bin/node"
    }

 

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

 

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
    

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "npm install sonar-scanner"
                    sh "npm run sonar-scanner"
                }
            }
        }

     stage('Deploy to aws'){
        steps{
          sshagent(['ssh-agent']){
            sh 'ssh -v -tt -o StrictHostKeyChecking=no ubuntu@35.153.210.220 ls'
          }
        }
       }

    }
}
