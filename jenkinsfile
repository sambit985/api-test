pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/bin/node"
       SSH_KEY_PATH = '~/.ssh/ida_rsa'
    }

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "npm install sonar-scanner"
                    sh "npm run sonar-scanner"
                }
            }
        }
  stage('deploy'){
     steps{
         sh "scp -r -i ${SSH_KEY_PATH} /var/lib/jenkins/workspace/ssh/ ubuntu@3.81.114.150:/home/ubuntu/"
       }
     }

    }
}
