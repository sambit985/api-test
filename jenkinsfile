pipeline {
    agent any

 

    environment {
        PATH = "$PATH:/usr/bin/node"
    }

 

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

 

        stage('Build') {
            steps {
                sh 'npm install',
                sh "npm run build"
            }
        }
    

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "npm install sonar-scanner"
                    sh "npm run sonar-scanner"
                }
            }
        }

   stage('Deploy to AWS') {
            steps {
                script {
                    sshagent([3.81.114.150]) {
                         sh "scp -o StrictHostKeyChecking=no ${workspace}/index.js ubuntu@3.81.114.150:/home/ubuntu"
                        // Replace the command inside the single quotes with your desired deployment command
                    }
                }
            }
        }

    }
}
