pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/bin/node"
        SSH_COMMAND = "ssh -i /var/lib/jenkins/.ssh/id_rsa"
    }

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }


  stage('deploy') {
     steps {
            sh "rsync -azh --info=progress2 --info=name0 -e $SSH_COMMAND  /var/lib/jenkins/workspace/ssh-new/ ubuntu@3.81.114.150:/www/"
       }
     }
}
}
