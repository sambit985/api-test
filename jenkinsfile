pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/bin/node"
    }

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
                 sh 'npm run build'
            }
        }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "npm install sonar-scanner"
                    sh "npm run sonar-scanner"
                }
            }
        }


stage('Deploy to EC2') {
    steps {
        script {
             def keyPair = 'second-jenkin.pem'
            def instanceIp = '3.81.114.150'

            def directories = sh(script: 'ls -d */', returnStdout: true).trim()
            echo "Directories found: ${directories}"

            def buildDirectory = sh(script: 'ls -d */ | grep -E "dist|build|out"', returnStdout: true).trim()
            echo "Build directory found: ${buildDirectory}"

            if (buildDirectory) {
                sh "scp -i ${keyPair} -r ${buildDirectory} ubuntu@${instanceIp}:/home/ubuntu"
                sh "ssh -i ${keyPair} ubuntu@${instanceIp} 'sudo systemctl restart your-application'"
            } else {
                error "No build directory found to deploy"
            }
        }
    }
}

    }
}
