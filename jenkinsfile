pipeline {
    agent any

    environment {
        PATH = "/home/ubuntu/.nvm/versions/node/v18.18.2/bin:$PATH"
        SSH_COMMAND = "ssh -i /var/lib/jenkins/.ssh/id_rsa"
    }

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/api-test.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing Node.js and npm...'
                    // Use nvm to set the Node.js version
                    sh 'export NVM_DIR="$HOME/.nvm" && [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" && nvm use 18'
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building the app...'
                    sh 'npm run build'
                }
            }
        }
    }
}

